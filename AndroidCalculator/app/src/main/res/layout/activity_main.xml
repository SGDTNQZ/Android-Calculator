<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@color/black">

    <TextView
        android:id="@+id/tv_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="50dp"
        android:gravity="right"
        android:textColor="@color/white"
        android:padding="5dp"
        android:layout_marginTop="250dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">
            <Button
                android:id="@+id/ac_btn"
                style="@style/button_top_style"
                android:text="AC"/>
            <Button
                android:id="@+id/negative_btn"
                style="@style/button_top_style"
                android:text="+/-"/>
            <Button
                android:id="@+id/percent_btn"
                style="@style/button_top_style"
                android:text="%"/>
            <Button
                android:id="@+id/divide_btn"
                style="@style/button_actions_style"
                android:text="/"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">
            <Button
                android:id="@+id/btn7"
                style="@style/button_number_style"
                android:text="7"/>
            <Button
                android:id="@+id/btn8"
                style="@style/button_number_style"
                android:text="8"/>
            <Button
                android:id="@+id/btn9"
                style="@style/button_number_style"
                android:text="9"/>
            <Button
                android:id="@+id/multiply_btn"
                style="@style/button_actions_style"
                android:text="X"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">
            <Button
                android:id="@+id/btn4"
                style="@style/button_number_style"
                android:text="4"/>
            <Button
                android:id="@+id/btn5"
                style="@style/button_number_style"
                android:text="5"/>
            <Button
                android:id="@+id/btn6"
                style="@style/button_number_style"
                android:text="6"/>
            <Button
                android:id="@+id/minus_btn"
                style="@style/button_actions_style"
                android:text="-"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">
            <Button
                android:id="@+id/btn1"
                style="@style/button_number_style"
                android:text="1"/>
            <Button
                android:id="@+id/btn2"
                style="@style/button_number_style"
                android:text="2"/>
            <Button
                android:id="@+id/btn3"
                style="@style/button_number_style"
                android:text="3"/>
            <Button
                android:id="@+id/plus_btn"
                style="@style/button_actions_style"
                android:text="+"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">
            <Button
                android:id="@+id/btn0"
                style="@style/button_number_style"
                android:layout_weight="1"
                android:text="0"/>

            <Button
                android:id="@+id/dot_btn"
                style="@style/button_number_style"
                android:text="."/>
            <Button
                android:id="@+id/equal_btn"
                style="@style/button_actions_style"
                android:text="="/>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>